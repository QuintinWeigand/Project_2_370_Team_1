<html t:type="layout" title="Register | Project2"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
      xmlns:p="tapestry:parameter">

<div class="row justify-content-md-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Create an Account</h3>
            </div>
            <div class="card-body">
                <t:form t:id="registerForm">
                    <div class="mb-3">
                        <t:label for="username" class="form-label">Username</t:label>
                        <t:textfield t:id="username" class="form-control" validate="required" placeholder="Choose a username"/>
                    </div>
                    <div class="mb-3">
                        <t:label for="email" class="form-label">Email</t:label>
                        <t:textfield t:id="email" class="form-control" validate="required,email" placeholder="Your email address"/>
                    </div>
                    <div class="mb-3">
                        <t:label for="password" class="form-label">Password</t:label>
                        <t:passwordfield t:id="password" class="form-control" validate="required" placeholder="Choose a password"/>
                    </div>
                    <div class="mb-3">
                        <t:label for="confirmPassword" class="form-label">Confirm Password</t:label>
                        <t:passwordfield t:id="confirmPassword" class="form-control" validate="required" placeholder="Confirm your password"/>
                    </div>
                    <div class="mb-3">
                        <t:submit class="btn btn-primary btn-large" value="Register"/>
                        <t:pagelink page="login" class="btn btn-link">Already have an account? Login</t:pagelink>
                    </div>
                </t:form>
            </div>
        </div>
    </div>
</div>

</html>